# this is a single line comment
"""
This is
a multiline
comment
"""
num1 = 42
num2 = 2.3
# print num with a value of 42 and 2.3
boolean = True 
# a boolean statement
string = 'Hello World'
# hello world is a string
pizza_toppings = ['Pepperoni', 'Sausage', 'Jalepenos', 'Cheese', 'Olives']
# a dictionary with values of pizza toppings
person = {'name': 'John', 'location': 'Salt Lake', 'age': 37, 'is_balding': False}
# a dictionary with the values of the person name
fruit = ('blueberry', 'strawberry', 'banana')
# a fruit being the key value and its values
print(type(fruit))
print(pizza_toppings[1])
# print function declaring the index one
pizza_toppings.append('Mushrooms')
print(person['name'])
# print function 
person['name'] = 'George'
# Tuples change value
person['eye_color'] = 'blue'
# Tuples add value
print(fruit[2])
# print function parameter
if num1 > 45:
    print("It's greater")
else:
    print("It's lower")
# if statement with a for loop break
if len(string) < 5:
    print("It's a short word!")
elif len(string) > 15:
    print("It's a long word!")
else:
    print("Just right!")
# if statement
for x in range(5):
    print(x)
for x in range(2,5):
    print(x)
for x in range(2,10,3):
    print(x)
x = 0
while(x < 5):
    print(x)
    x += 1
# while loop
pizza_toppings.pop()
pizza_toppings.pop(1)
# your removing a pizza topping

print(person)
person.pop('eye_color')
print(person)
#  print a person and removed eye_color
for topping in pizza_toppings:
    if topping == 'Pepperoni':
        continue
    print('After 1st if statement')
    if topping == 'Olives':
        break
#  for loop with a if statment
def print_hello_ten_times():
    for num in range(10):
        print('Hello')
#  function with an argument
print_hello_ten_times()

def print_hello_x_times(x):
    for num in range(x):
        print('Hello')

print_hello_x_times(4)

def print_hello_x_or_ten_times(x = 10):
    for num in range(x):
        print('Hello')
#  definition and a parameter where x is 10  and print function of Hello
print_hello_x_or_ten_times()
print_hello_x_or_ten_times(4)

#  print function with a parameter and inside that parameter is a value of 4
